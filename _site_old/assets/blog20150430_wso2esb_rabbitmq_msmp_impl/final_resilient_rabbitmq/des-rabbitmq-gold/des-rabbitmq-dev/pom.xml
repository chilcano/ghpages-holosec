		</dependency>
	</dependencies>
	<properties>
		<version.wso2.rabbitmq>3.0.3.wso2v1</version.wso2.rabbitmq>
		<version.orbit.rabbitmq>3.0.3</version.orbit.rabbitmq>
	</properties>
</project>
